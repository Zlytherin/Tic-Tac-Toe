<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize">

        <ImageView
            android:id="@+id/back_image"
            android:layout_width="?android:actionBarSize"
            android:layout_height="?android:actionBarSize"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/app_name"
            android:textColor="#000000"
            android:fontFamily="sans-serif-medium"
            android:textSize="28sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="@drawable/layout_bg">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <LinearLayout
                android:id="@+id/llButton1"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">

                <ImageView android:id="@+id/idButton1"
                    android:padding="35.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

            </LinearLayout>

            <View
                android:background="@drawable/line"
                android:layout_width="fill_parent"
                android:layout_height="7.0dip"
                android:layout_marginLeft="16.0dip" />

            <LinearLayout
                android:id="@+id/llButton2"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/idButton2"
                    android:padding="35.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

            </LinearLayout>

            <View
                android:background="@drawable/line"
                android:layout_width="fill_parent"
                android:layout_height="7.0dip"
                android:layout_marginLeft="16.0dip" />

            <LinearLayout
                android:id="@+id/llButton3"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/idButton3"
                    android:padding="35.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:background="@drawable/line"
            android:layout_width="7.0dip"
            android:layout_height="fill_parent"
            android:layout_marginTop="16.0dip"
            android:layout_marginBottom="16.0dip" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <LinearLayout
                android:id="@+id/llButton4"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/idButton4"
                    android:padding="35.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

            </LinearLayout>

            <View
                android:background="@drawable/line"
                android:layout_width="fill_parent"
                android:layout_height="7.0dip" />

            <LinearLayout
                android:id="@+id/llButton5"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip" android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/idButton5"
                    android:padding="35.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

            </LinearLayout>

            <View
                android:background="@drawable/line"
                android:layout_width="fill_parent"
                android:layout_height="7.0dip" />

            <LinearLayout
                android:id="@+id/llButton6"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/idButton6"
                    android:padding="35.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:background="@drawable/line"
            android:layout_width="7.0dip"
            android:layout_height="fill_parent"
            android:layout_marginTop="16.0dip"
            android:layout_marginBottom="16.0dip" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:layout_weight="1.0">

            <LinearLayout
                android:id="@+id/llButton7"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/idButton7"
                    android:padding="35.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

            </LinearLayout>

            <View
                android:background="@drawable/line"
                android:layout_width="fill_parent"
                android:layout_height="7.0dip"
                android:layout_marginRight="16.0dip" />

            <LinearLayout
                android:id="@+id/llButton8"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/idButton8"
                    android:padding="35.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

            </LinearLayout>

            <View
                android:background="@drawable/line"
                android:layout_width="fill_parent"
                android:layout_height="7.0dip"
                android:layout_marginRight="16.0dip" />

            <LinearLayout
                android:id="@+id/llButton9"
                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/idButton9"
                    android:padding="35.0dip"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>